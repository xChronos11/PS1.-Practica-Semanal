@model IEnumerable<PS1._Practica_Semanal.Models.Game>

@{
    ViewBag.Title = "Catalogo";
}

<h2>Catalogo</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <label class="control-label col-md-2">Imagen</label>
        </th>
        <th>
            <label class="control-label col-md-2">Nombre</label>
        </th>
        <th>
            <label class="control-label col-md-2">Desarrollador</label>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Director)
        </th>
        <th>
            <label class="control-label col-md-2">Fecha de lanzamiento</label>
        </th>
        <th>
            <label class="control-label col-md-2">Plataforma</label>
        </th>
        <th>
            <label class="control-label col-md-2">Clasificacion</label>
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        <img width="200" height="299" src="@Html.DisplayFor(modelItem => item.imagen)">
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Developer)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Director)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ReleaseYear)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Platform)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Classification)
    </td>

    <td>
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }  ) 
       
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
